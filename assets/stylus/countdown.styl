.container
	width 90%
	margin 0 auto
	margin-top 2rem

.countdown
	min-height 100%
	min-width 100%

.countdown > h1
	display block
	margin 0 auto
	font-size 3rem

.countdown-block
	padding 1em
	width 20%
	margin 0
	float left

.countdown-time-label, .countdown-time-sublabel
	display block
	width 90%
	margin 0 auto

.countdown-time-label
	font-size 2rem

.countdown-time-sublabel
	font-size 1.2rem